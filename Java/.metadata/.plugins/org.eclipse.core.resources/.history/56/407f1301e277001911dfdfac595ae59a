package acao;

import javax.swing.table.DefaultTableModel;

import beans.Produto;
import dados.Dado;

public class Acao {
	
	public static String Vale, Imposto, SalLiquido;

	// Incrementa qntd
	public void incrementa(String c) {

		
		for(int i =0; i<Dado.arrayProdutos.size();i++) {
			if (c.equals(Dado.arrayProdutos.get(i).getNome())) {
				Dado.arrayProdutos.set(i, new Object[] {
						"c",(Dado.arrayProdutos.get(i).getQuantidade()+1)
						}
				}
			}
		}
		
		

		//Dado.arrayColaboradores.add(c);

	}


}
