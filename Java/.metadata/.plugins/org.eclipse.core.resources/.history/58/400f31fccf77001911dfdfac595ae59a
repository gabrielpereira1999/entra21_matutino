package acao;

import javax.swing.table.DefaultTableModel;

import beans.IMC;
import dado.Pessoas;
import dados.Dado;

public class Acao {

	// Validar repeticao
	public boolean validar(IMC c) {

		for (int i = 0; i < Pessoas.arrayIMC.size(); i++) {
			if ((Pessoas.arrayIMC.get(i).getNome().contentEquals(c.getNome()))) {
				return false;
			}
		}

		return true;
	}

	// Cadastrar
	public void cadastrar(IMC c) {

		Pessoas.arrayIMC.add(c);

	}
	
	//Selecionar
		public DefaultTableModel selecionar() {
			DefaultTableModel modelo = new DefaultTableModel();
			modelo.addColumn("Nome");
			modelo.addColumn("Idade");
			modelo.addColumn("IMC");
			
			for(int i = 0;i<Dado.arrayDados.size();i++) {
				modelo.addRow(new Object[] {
						Dado.arrayDados.get(i).getNome(),
						Dado.arrayDados.get(i).getGenero(),
						Dado.arrayDados.get(i).getPlataforma(),
						Dado.arrayDados.get(i).getClassificao(),
						Dado.arrayDados.get(i).getValor(),
				});
			}
			return modelo;
		}

}
